<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  >
  <data>
    <variable
      name="view"
      type="cz.unitbrno.perunteam.recordnote.ui.main.MainView"
      />

    <variable
      name="viewModel"
      type="cz.unitbrno.perunteam.recordnote.ui.main.MainViewModel"
      />

  </data>
  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="16dp"
        >
        <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
          <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              >
              <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Meeting #1"
                android:textSize="16sp"
                android:textStyle="bold"
                />
              <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="18.4.2018"
                />
            </LinearLayout>
            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Recording"
              android:textSize="10sp"
              />
          </LinearLayout>
          <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            >
            <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              >
              <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Meeting #2"
                android:textSize="16sp"
                android:textStyle="bold"
                />
              <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="21.4.2018"
                />
            </LinearLayout>
            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Recording"
              android:textSize="10sp"
              />
          </LinearLayout>
          <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            >
            <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              >
              <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Meeting #3"
                android:textSize="16sp"
                android:textStyle="bold"
                />
              <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="22.4.2018"
                />
            </LinearLayout>
            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Not recording"
              android:textSize="10sp"
              />
          </LinearLayout>


        </LinearLayout>

        <!-- TODO: MEETINGS LAYOUT -->

      </LinearLayout>

      <ImageView
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/wave"
        />
      <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="6dp"
        android:gravity="center"
        >


        <!--TODO: RECORD BUTTON -->

        <Button
          android:id="@+id/recordButton"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:layout_gravity="center"
          android:text="Play"
          android:textColor="@color/white"
          android:background="@drawable/rounded_shape"
          />
        <Button
          android:id="@+id/stopButton"
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:layout_gravity="center"
          android:text="Stop"
          android:textColor="@color/white"
          android:background="@drawable/rounded_stop"
          />
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
</layout>